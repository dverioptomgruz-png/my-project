# ===== Нейро-Ассистент — Environment Variables =====

# --- General ---
NODE_ENV=development

# --- PostgreSQL ---
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=neuro_user
POSTGRES_PASSWORD=change_me_strong_password
POSTGRES_DB=neuro_assistant
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}?schema=public

# --- Backend ---
BACKEND_PORT=4000
JWT_SECRET=change_me_jwt_secret_min_32_chars_long
JWT_REFRESH_SECRET=change_me_jwt_refresh_secret_min_32_chars
JWT_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# --- Token Encryption (AES-256-GCM) ---
TOKEN_ENCRYPTION_KEY=change_me_32_byte_hex_key_64_chars

# --- Avito OAuth2 ---
AVITO_CLIENT_ID=your_avito_client_id
AVITO_CLIENT_SECRET=your_avito_client_secret
AVITO_REDIRECT_URI=http://localhost:4000/api/avito/oauth/callback
AVITO_API_BASE_URL=https://api.avito.ru
AVITO_AUTH_URL=https://avito.ru/oauth

# --- n8n ---
N8N_HOST=n8n
N8N_PORT=5678
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=change_me_n8n_password
N8N_WEBHOOK_URL=http://n8n:5678
N8N_API_KEY=change_me_n8n_api_key

# --- SearXNG ---
SEARXNG_HOST=searxng
SEARXNG_PORT=8080
SEARXNG_URL=http://searxng:8080

# --- Frontend ---
NEXT_PUBLIC_API_URL=http://localhost:4000/api
NEXT_PUBLIC_APP_NAME=Нейро-Ассистент

# --- CORS ---
CORS_ORIGINS=http://localhost:3000,http://localhost:4000

# --- Rate Limiting ---
THROTTLE_TTL=60
THROTTLE_LIMIT=30
